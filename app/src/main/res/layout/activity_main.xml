<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bcg1"
    tools:context="xin.dspwljsyxgs.www.feihualin.MainActivity"
    >
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/title1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="飞花令"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#bfecff"
        />
    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="by  TYZ"
        android:layout_marginRight="10dp"
        android:layout_gravity="bottom"
        android:textSize="12dp"
        android:textColor="#68686b"
        />
</LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <EditText
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/edittext1"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textColor="#bfecff"
        android:textColorHint="#bfecff"
        android:hint="输入你要查找的字"
        android:background="@drawable/edittext1_bck"/>
    <Button
        android:id="@+id/button1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="查找"
        android:background="@drawable/button1_bacg"/>
    </LinearLayout>
    <RadioGroup
        android:id="@+id/rgp1"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <RadioButton
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/radio"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="按标题查找"
            android:textColor="@drawable/textcolor"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/radio"
            android:button="@null"
            android:gravity="center"
            android:text="按内容查找"
            android:textColor="@drawable/textcolor"
            android:textSize="14sp" />

    </RadioGroup>
    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
